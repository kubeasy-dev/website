{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Challenge title"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "description": "Brief description of symptoms (NOT the cause)"
    },
    "theme": {
      "type": "string",
      "minLength": 1,
      "description": "Category slug (networking, storage, etc.)"
    },
    "difficulty": {
      "type": "string",
      "enum": ["easy", "medium", "hard"]
    },
    "type": {
      "default": "fix",
      "description": "Challenge type (fix, build, migrate)",
      "type": "string"
    },
    "estimatedTime": {
      "type": "integer",
      "exclusiveMinimum": 0,
      "maximum": 9007199254740991,
      "description": "Estimated time in minutes"
    },
    "initialSituation": {
      "type": "string",
      "minLength": 1,
      "description": "What user finds when starting"
    },
    "objective": {
      "type": "string",
      "minLength": 1,
      "description": "What needs to be achieved (NOT how)"
    },
    "ofTheWeek": {
      "default": false,
      "type": "boolean"
    },
    "starterFriendly": {
      "default": false,
      "type": "boolean"
    },
    "objectives": {
      "default": [],
      "description": "List of objectives to validate",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "order": {
            "type": "integer",
            "minimum": -9007199254740991,
            "maximum": 9007199254740991
          },
          "type": {
            "type": "string",
            "enum": ["status", "log", "event", "metrics", "connectivity"]
          },
          "spec": {
            "anyOf": [
              {
                "type": "object",
                "properties": {
                  "target": {
                    "type": "object",
                    "properties": {
                      "kind": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "labelSelector": {
                        "type": "object",
                        "propertyNames": {
                          "type": "string"
                        },
                        "additionalProperties": {
                          "type": "string"
                        }
                      }
                    },
                    "required": ["kind"],
                    "additionalProperties": false
                  },
                  "conditions": {
                    "anyOf": [
                      {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "type": {
                              "type": "string"
                            },
                            "status": {
                              "type": "string"
                            }
                          },
                          "required": ["type", "status"],
                          "additionalProperties": false
                        }
                      },
                      {
                        "type": "null"
                      }
                    ]
                  }
                },
                "required": ["target", "conditions"],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "target": {
                    "type": "object",
                    "properties": {
                      "kind": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "labelSelector": {
                        "type": "object",
                        "propertyNames": {
                          "type": "string"
                        },
                        "additionalProperties": {
                          "type": "string"
                        }
                      }
                    },
                    "required": ["kind"],
                    "additionalProperties": false
                  },
                  "container": {
                    "type": "string"
                  },
                  "expectedStrings": {
                    "anyOf": [
                      {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      {
                        "type": "null"
                      }
                    ]
                  },
                  "sinceSeconds": {
                    "type": "number"
                  }
                },
                "required": ["target", "expectedStrings"],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "target": {
                    "type": "object",
                    "properties": {
                      "kind": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "labelSelector": {
                        "type": "object",
                        "propertyNames": {
                          "type": "string"
                        },
                        "additionalProperties": {
                          "type": "string"
                        }
                      }
                    },
                    "required": ["kind"],
                    "additionalProperties": false
                  },
                  "forbiddenReasons": {
                    "anyOf": [
                      {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      {
                        "type": "null"
                      }
                    ]
                  },
                  "sinceSeconds": {
                    "type": "number"
                  }
                },
                "required": ["target", "forbiddenReasons"],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "target": {
                    "type": "object",
                    "properties": {
                      "kind": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "labelSelector": {
                        "type": "object",
                        "propertyNames": {
                          "type": "string"
                        },
                        "additionalProperties": {
                          "type": "string"
                        }
                      }
                    },
                    "required": ["kind"],
                    "additionalProperties": false
                  },
                  "checks": {
                    "anyOf": [
                      {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "field": {
                              "type": "string"
                            },
                            "operator": {
                              "type": "string"
                            },
                            "value": {
                              "type": "number"
                            }
                          },
                          "required": ["field", "operator", "value"],
                          "additionalProperties": false
                        }
                      },
                      {
                        "type": "null"
                      }
                    ]
                  }
                },
                "required": ["target", "checks"],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "sourcePod": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "labelSelector": {
                        "type": "object",
                        "propertyNames": {
                          "type": "string"
                        },
                        "additionalProperties": {
                          "type": "string"
                        }
                      }
                    },
                    "additionalProperties": false
                  },
                  "targets": {
                    "anyOf": [
                      {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "url": {
                              "type": "string"
                            },
                            "expectedStatusCode": {
                              "type": "number"
                            },
                            "timeoutSeconds": {
                              "type": "number"
                            }
                          },
                          "required": ["url", "expectedStatusCode"],
                          "additionalProperties": false
                        }
                      },
                      {
                        "type": "null"
                      }
                    ]
                  }
                },
                "required": ["sourcePod", "targets"],
                "additionalProperties": false
              }
            ]
          }
        },
        "required": ["key", "title", "description", "order", "type", "spec"],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "title",
    "description",
    "theme",
    "difficulty",
    "type",
    "estimatedTime",
    "initialSituation",
    "objective",
    "ofTheWeek",
    "starterFriendly",
    "objectives"
  ],
  "additionalProperties": false
}
